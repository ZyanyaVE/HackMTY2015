<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="itesm.mx.hackmty2015.HomeActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">

        <Button
            android:id="@+id/newListBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickNewList"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:text="Back to Lists"
            />

    </LinearLayout>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Fruits and Vegetables"
        android:id="@+id/button2"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Dairy"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_alignStart="@+id/button2" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Bakery and Pastas"
        android:id="@+id/button4"
        android:layout_below="@+id/button3"
        android:layout_alignStart="@+id/button3" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Meat and Poultry"
        android:id="@+id/button5"
        android:layout_below="@+id/button4"
        android:layout_alignEnd="@+id/button4" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Beverages"
        android:id="@+id/button6"
        android:layout_below="@+id/button5"
        android:layout_alignStart="@+id/button5" />

</RelativeLayout>
